<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="@dimen/minFilterItemHeight"
    android:background="@color/undoLayoutGrey"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="@string/filter_deleted"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:textAppearance="?android:attr/textAppearanceMedium"/>


    <Button
        android:id="@+id/undoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@android:drawable/ic_menu_revert"
        android:layout_centerVertical="true"
        android:text="@string/undo" android:layout_alignParentEnd="true"
        style="?android:attr/borderlessButtonStyle"/>
</RelativeLayout>