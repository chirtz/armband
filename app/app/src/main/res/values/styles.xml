<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/primaryColor</item>
        <item name="dialogTheme">@style/Theme.Dialog</item>
        <item name="colorPrimaryDark">@color/primaryDarkDefault</item>

        <item name="colorPrimary">@color/primaryColor</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>



    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <style name="Theme.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/primaryColor</item>
    </style>

    <style name="Theme.AppCompat.Dialog.Alert." parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/primaryColor</item>
    </style>

    <style name="Theme.AppCompat.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/primaryColor</item>
    </style>

    <style name="ChromeStylePopup" parent="android:Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:minWidth">75dp</item>
        <item name="android:maxWidth">150dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

</resources>
